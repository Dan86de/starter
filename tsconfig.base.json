{
	"compilerOptions": {
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"moduleDetection": "force",
		"composite": true,
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"esModuleInterop": false,
		"declaration": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "NodeNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": [],
		"isolatedModules": true,
		"sourceMap": true,
		"declarationMap": true,
		"noImplicitReturns": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": false,
		"noErrorTruncation": true,
		"allowJs": false,
		"checkJs": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"target": "ES2022",
		"module": "NodeNext",
		"incremental": true,
		"removeComments": false,
		"paths": {
			"@org/client": ["./packages/client/src/index.js"],
			"@org/client/*": ["./packages/client/src/*.js"],
			"@org/client/test/*": ["./packages/client/test/*.js"],
			"@org/database": ["./packages/database/src/index.js"],
			"@org/database/*": ["./packages/database/src/*.js"],
			"@org/database/test/*": ["./packages/database/test/*.js"],
			"@org/server": ["./packages/server/src/index.js"],
			"@org/server/*": ["./packages/server/src/*.js"],
			"@org/server/test/*": ["./packages/server/test/*.js"]
		}
	}
}
